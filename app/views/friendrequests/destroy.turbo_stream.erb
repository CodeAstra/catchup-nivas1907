<% if request.referer == "http://localhost:3000/friends/new" %>
    <%= turbo_stream.replace"friendbutton_#{@user.id}" do%>
        <%= turbo_frame_tag "fbutton_#{@user.id}" do %>
             <%= button_to "Add Friend",friends_path(fid:@user.id),method: :post %>
        <%end%>
    <%end%>
<%elsif request.referer ==  "http://localhost:3000/account/#{params[:sender_id]}" %>
    <%= turbo_stream.replace "accountpage_#{params[:sender_id]}" do%>
        <%= turbo_frame_tag "fbutton_#{@user.id}" do %>
             <%= button_to "Add Friend",friends_path(fid:@user.id),method: :post %>
        <%end%>
    <%end%>
<% else %>
    <%= turbo_stream.remove "pendingpage_#{@user.id}" %>
<%end%>
<%= render_turbo_stream_flash_message %>