<% @pendingfriends.each do |u| %>
    <%= turbo_frame_tag "pendingpage_#{u.id}" do %>
        <% if u.avatar.attached? %>
            <img src="<%=url_for(u.avatar)%>" class="avatar" />
            <h1></h1>
        <%end%>
        <%= link_to  (
        u.username||u.email
        ), account_path(u.id) , method: :get , data: { turbo_frame: "_top" } %>
        <h1></h1>
        <% p=Friendship.where(reciver_id: current_user.id , sender_id: u.id).first %>
        <%= button_to "accept",friendship_path(p.id,sender_id: u.id,status: Friendship.friendship_statuses[:accepted]),method: :patch %>
        <%= button_to "reject",friendship_path(p.id,sender_id: u.id,status: Friendship.friendship_statuses[:rejected]),method: :patch %>
        <p>sent <%= time_ago_in_words(p.updated_at) %> ago </p>
        <h1></h1>
    <%end%>
<%end%>