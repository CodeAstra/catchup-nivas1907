<% if @update_success %>
  <% if request.referer == "http://localhost:3000/friendships/new" %>
    <%= turbo_stream.remove "friends_#{params[:sender_id]}" %>
  <%elsif request.referer ==  "http://localhost:3000/account/#{params[:sender_id]}" %>
    <%= turbo_stream.remove "accountpage_#{params[:sender_id]}" %>
  <% else %>
    <%= turbo_stream.remove "pendingpage_#{params[:sender_id]}" %>
  <% end %>
  <% flash[:notice] = "Friend request #{Friendship.friendship_statuses.keys[params[:status].to_i] }" %>
<%else %>
  <%= flash[:notice] = "Invalid User" %>
<% end %>

<%= render_turbo_stream_flash_message %>