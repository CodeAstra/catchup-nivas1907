<% friendship = current_user.sent_friendships.pending.find_by(reciver_id: params[:fid]) %>

<%= turbo_stream.replace "fbutton_#{params[:fid]}" do %>
  <%= turbo_frame_tag "cancel_#{params[:fid]}" do %>
      <%= button_to "Pending" %>
      <%= button_to "cancel request", cancel_request_friendships_path(id: friendship.id), method: :delete, params: { reciver_id: params[:fid] } %>
  <% end %>
<% end %>

<%= render_turbo_stream_flash_message %>
