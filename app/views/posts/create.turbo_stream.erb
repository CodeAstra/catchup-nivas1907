<% if @post.persisted?  %>
  <%= turbo_stream.prepend "post" do%>
      <%= render @post %>
  <%end%>
  <% flash[:notice] = "Post successfully created" %>
  <%= turbo_stream.update Post.new, "" %>
<%else%>
  <% flash[:notice] = @post.errors.full_messages.to_sentence %>
<%end%>

<%= render_turbo_stream_flash_message %>
