<%= turbo_stream.append "posts" do %>
  <%= render @posts %>
<% end %>

<% if @pagy.next %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: posts_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% else %>
  <%= turbo_stream.remove "load_more" %>
<% end %>
