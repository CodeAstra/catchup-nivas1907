<% is_edit = post.persisted? %>
<%= form_with model: post, url: form_path, method: form_method,
              html: {
                id: is_edit ? "edit-post-form-#{post.id}" : "new-post-form",
                onsubmit: is_edit ? "handleEditSubmit(event, #{post.id})" : "handleCreateSubmit(event)"
              } do |f| %>
  <%= f.label :title, placeholder: "title", class: "form_control" %>
  <%= f.text_field :title %>

  <%= f.label :description, placeholder: "description", class: "form_box" %>
  <%= f.text_field :description %>

  <%= f.submit is_edit ? "Update Post" : "Create Post" %>
<% end %>
