<%= turbo_frame_tag "account_#{current_user.id}" do %>
  <%= form_with model: current_user, url:account_path, method: :patch do |f| %>
    <%= f.label :username, placeholder: "username", :class => "form_control" %>
    <%= f.text_field :username %>
    <%= f.label "bio", placeholder: "bio", :class => "form_box" %>
    <%= f.text_field :bio %>
    <%= f.file_field :avatar %> <br>
    <%= f.check_box :daily_digest %>
    <%= f.label :daily_digest, "Send me the daily digest email" %> <br>
    <%= f.submit %>    
  <% end %>
  <%= button_to "cancel", cancel_account_index_path, method: :get %>
<% end %>